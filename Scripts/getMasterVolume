#!/bin/sh

# Gets master volume info
vol=$(amixer get Master | awk -F'[]%[]' '/%/ {if ($5 == "off") { print "x" } else { print $2 }}' | head -n 1)

if [[ $vol = "x" ]]; then
    echo "<fc=#9A758E> </fc>x"
elif [[ $vol = "0" ]]; then
    echo "<fc=#9A758E> </fc>$vol%"
else
    echo "<fc=#9A758E> </fc>$vol%"
fi

exit 0
